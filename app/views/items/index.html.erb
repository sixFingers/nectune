<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Author</th>
      <th>Content</th>
      <th>Summary</th>
      <th>Image</th>
      <th>Published</th>
      <th>Updated</th>
      <th>Entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.url %></td>
        <td><%= item.author_id %></td>
        <td><%= item.content %></td>
        <td><%= item.summary %></td>
        <td><%= item.image %></td>
        <td><%= item.published %></td>
        <td><%= item.updated %></td>
        <td><%= item.entry_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
